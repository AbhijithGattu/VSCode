<core:FragmentDefinition xmlns="sap.m"
    xmlns:customControls="com.project2.customControls"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <form:SimpleForm editable="true">
        <form:content>
            <Label text="Custon hover event on button"></Label>
            <customControls:CustomButton text="Custom button ,hover on me" customMouseHover="onCustomMouseHover" type="Emphasized"></customControls:CustomButton>

            <Label text="Custom text"></Label>
            <customControls:CustomControl text="From Custom Control" color="aqua"></customControls:CustomControl>
            <core:Title text="More Info"></core:Title>
            <Label text="Fruit"></Label>
            <Text text="{name}"></Text>
            <Label text="vitamins"></Label>
            <Text text="{vitamin}"></Text>
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
