<mvc:View controllerName="com.project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
        <content />
        <form:SimpleForm id = "form">
            <form:content>
                <Label id="l1" text="User Name"></Label>
                <Input id="idUserName" width="20%"></Input>
                <Label id="l2" text="Password"></Label>
                <Input id="idPwd" width="20%" type="Password"></Input>
                <Label id="l3"></Label>
                <Button id = "submit" text="Submit" press="onSubmit" width="10%"></Button>
            </form:content>
        </form:SimpleForm>
        <!-- <Image id="image" src="https://cdn.gulte.com/wp-content/uploads/2021/02/Brahmi.jpg" width="100%" height="100%"/> -->
    </Page>
</mvc:View>
